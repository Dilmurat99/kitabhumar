<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.user.RegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:id="@+id/editEmail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:hint="ئېخەت ئادرېسىڭىز"
        android:enabled="false"
         />
    <EditText
        android:id="@+id/editName"
        app:layout_constraintTop_toBottomOf="@id/editEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:hint="ئىسمىڭىز"
        />
    <EditText
        android:id="@+id/editSurname"
        app:layout_constraintTop_toBottomOf="@id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:hint="فامىلىڭىز"
        />
    <EditText
        android:id="@+id/editUsername"
        app:layout_constraintTop_toBottomOf="@id/editSurname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        android:hint="ئىشلەتكۈچى ئىسمىڭىز"
        />
    <ImageButton
        android:id="@+id/buttonImage"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_baseline_image_24"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@id/editUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="تىزىملىتىش"
        android:layout_width="150dp"
        android:layout_height="150dp"
        />

    <Button
        android:id="@+id/buttonReg"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/buttonImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="تىزىملىتىش"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/buttonClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_baseline_cancel_24"
        android:layout_marginStart="-20dp"
        android:layout_marginBottom="-20dp"
        android:textColor="#000"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/buttonImage"
        app:layout_constraintBottom_toTopOf="@id/buttonImage"
        />

</androidx.constraintlayout.widget.ConstraintLayout>